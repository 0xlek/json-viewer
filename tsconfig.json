{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./extension",
    "paths": {
      "*": ["*"]
    },
    "types": ["chrome", "node"]
  },
  "include": [
    "extension/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "pkg"
  ]
}
