{
  "name": "JSON Viewer Reborn",
  "version": "0.19.0",
  "manifest_version": 3,
  "author": "0xlek",
  "description": "The most beautiful and customizable JSON/JSONP highlighter that your eyes have ever seen. Modernized with Manifest v3 and ES6.",
  "homepage_url": "https://github.com/0xlek/json-viewer",
  "minimum_chrome_version": "88",
  "icons": {
    "128": "icons/128.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/viewer.css",
        "assets/viewer-alert.css",
        "assets/jq-modal.css",
        "assets/jq.wasm",
        "pages/options.html",
        "pages/omnibox.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "128": "icons/128.png"
    },
    "default_title": "JSON Viewer"
  },
  "omnibox": { "keyword": "json-viewer" },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/viewer.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": ["storage", "clipboardWrite", "offscreen", "activeTab", "tabs"]
}
